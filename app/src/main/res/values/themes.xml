<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NMedia" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="like_button"
        parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/button_tint_selector</item>
        <item name="minWidth">@dimen/buttonSize</item>
        <item name="minHeight">@dimen/buttonSize</item>
        </style>

    <style name="share_button"
        parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="minWidth">@dimen/buttonSize</item>
        <item name="minHeight">@dimen/buttonSize</item>
    </style>

    <style name="view_button"
        parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="minWidth">@dimen/buttonSize</item>
        <item name="minHeight">@dimen/buttonSize</item>
    </style>

    <style name="menu_button"
        parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="minWidth">@dimen/buttonSize</item>
        <item name="minHeight">@dimen/buttonSize</item>
    </style>

</resources>